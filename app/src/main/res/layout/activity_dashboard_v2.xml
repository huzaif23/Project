<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard_v2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delta.project.project.DashboardV2">

    <include
        android:id="@+id/toolbars"
        layout="@layout/toolbar"
        />

    <Button
        android:id="@+id/btns1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbars"
        android:layout_marginTop="110dp"
        android:text="@string/panel"
        android:background="@drawable/buttonstyle"
        />

    <Button
        android:id="@+id/btns2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns1"
        android:layout_centerHorizontal="true"
        android:text="@string/configure_router"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="8dp"
        />

    <Button
        android:id="@+id/btns3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns2"
        android:layout_centerHorizontal="true"
        android:text="@string/ping"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="8dp"
        />
</RelativeLayout>
