<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dashboard_v2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.delta.project.project.DashboardV2">

    <include
        android:id="@+id/toolbars"
        layout="@layout/toolbar"
        />

    <Button
        android:id="@+id/btns1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbars"
        android:layout_marginTop="110dp"
        android:text="@string/panel"
        android:background="@drawable/buttonstyle"
        />

    <Button
        android:id="@+id/btns2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns1"
        android:layout_centerHorizontal="true"
        android:text="@string/configure_router"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="8dp"
        />

    <Button
        android:id="@+id/btns3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns2"
        android:layout_centerHorizontal="true"
        android:text="@string/ping"
        android:background="@drawable/buttonstyle"
        android:layout_marginTop="8dp"
        />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2207019312510246/2466372016"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
